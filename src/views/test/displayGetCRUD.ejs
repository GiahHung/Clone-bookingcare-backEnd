<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
  </head>
  <body>
    <style>
      table,
      th,
      td {
        border: 1px solid black;
        border-collapse: collapse;
      }
      .btn-edit{
        background-color: rgb(227, 57, 198);
        outline: none;
        border-radius: 3px;
        border: 2px solid black;
        height: 29px;
        width: 35px;
        margin: 5px 5px;
        cursor: pointer;
        text-decoration: none;

      }
      .btn-delete{
        background-color: red;
        outline: none;
        border-radius: 3px;
        border: 2px solid black;
        height: 29px;
        width: 55px;
        margin-top: 5px;
        margin-bottom: 5px;
        cursor: pointer;
        text-decoration: none;

      }
      .tbl{
        background-color: azure;
      }
    </style>

    <h2>A basic HTML table</h2>

    <table style="width: 100%" class="tbl">
      <tr>
        <th>Email</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Address</th>
        <th>Action</th>
      </tr>
      <% for(let i=0; i < dataTable.length; i++) { %>
      <tr>
        <td><%= dataTable[i].email %></td>
        <td><%= dataTable[i].firstName %></td>
        <td><%= dataTable[i].lastName %></td>
        <td><%= dataTable[i].address %></td>
        <td>
          <a href="/edit-CRUD?id=<%= dataTable[i].id %>" class="btn-edit">Edit</a> 
          <a href="/delete-CRUD?id=<%= dataTable[i].id %>" class="btn-delete">Delete</a>
        </td>
        
      </tr>
      <% } %>
    </table>
  </body>
</html>
